<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/loseFlag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:enabled="false"
            android:onClick="loseFlag"
            android:text="@string/lose_flag" />
    </LinearLayout>

    <ImageView
        android:id="@+id/flagInfo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="0.5"
        android:contentDescription="@string/flag_info"
        android:scaleType="fitCenter"
        android:src="@drawable/flag_icon_false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:text=""
        android:textAlignment="center"
        android:id="@+id/tv_timer_near_flag"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>