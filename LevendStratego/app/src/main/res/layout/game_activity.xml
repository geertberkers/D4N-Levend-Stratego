<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/pocketText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Telefoon in broekzak!"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_below="@+id/pocketText"
        android:layout_centerHorizontal="true"
        android:contentDescription="Telefoon in broekzak!"
        android:scaleType="fitCenter"
        android:src="@drawable/pocket_icon" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/flagInfo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="0.5"
            android:contentDescription="Vlag informatie"
            android:scaleType="fitCenter"
            android:src="@drawable/flag_icon_false" />

        <Button
            android:id="@+id/loseFlag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:enabled="false"
            android:onClick="loseFlag"
            android:text="Verlies\nvlag" />
    </LinearLayout>

</RelativeLayout>